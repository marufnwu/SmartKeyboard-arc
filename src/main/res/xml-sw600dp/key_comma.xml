<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <switch>
        <case
            keybaord:mode="url"
        >
            <Key
                keybaord:keySpec="/"
                keybaord:keyStyle="settingsMoreKeysStyle" />
        </case>
        <case
            keybaord:mode="email"
        >
            <Key
                keybaord:keySpec="\@"
                keybaord:keyStyle="settingsMoreKeysStyle" />
        </case>
        <case
            keybaord:keyboardLayoutSet="dvorak"
        >
            <Key
                keybaord:keySpec="!"
                keybaord:moreKeys="!text/morekeys_exclamation,%"
                keybaord:keyStyle="settingsMoreKeysStyle" />
        </case>
        <default>
            <Key
                keybaord:keySpec="!text/keyspec_tablet_comma"
                keybaord:moreKeys="!text/morekeys_tablet_comma,%"
                keybaord:keyHintLabel="!text/keyhintlabel_tablet_comma"
                keybaord:keyLabelFlags="hasPopupHint"
                keybaord:keyStyle="settingsMoreKeysStyle" />
        </default>
    </switch>
</merge>

<merge xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard">
    <switch>
        <case keybaord:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted">
            <Key
                keybaord:keySpec="("
                keybaord:keyLabelFlags="fontDefault" />
            <Key
                keybaord:keySpec=")"
                keybaord:keyLabelFlags="fontDefault" />
            <!-- U+0E09: "ฉ" THAI CHARACTER CHO CHING -->
            <Key keybaord:keySpec="&#x0E09;" />
            <!-- U+0E2E: "ฮ" THAI CHARACTER HO NOKHUK -->
            <Key keybaord:keySpec="&#x0E2E;" />
            <!-- U+0020: " " SPACE
                 U+0E3A: " ฺ" THAI CHARACTER PHINTHU -->
            <!-- Note: The space character is needed as a preceding letter to draw some Thai
                 composing characters correctly. -->
            <Key
                keybaord:keySpec="&#x20;&#x0E3A;|&#x0E3A;"
                keybaord:keyLabelFlags="followKeyLetterRatio" />
            <!-- U+0020: " " SPACE
                 U+0E4C: " ์" THAI CHARACTER THANTHAKHAT -->
            <!-- Note: The space character is needed as a preceding letter to draw some Thai
                 composing characters correctly. -->
            <Key
                keybaord:keySpec="&#x20;&#x0E4C;|&#x0E4C;"
                keybaord:keyLabelFlags="followKeyLetterRatio" />
            <Key
                keybaord:keySpec="\?"
                keybaord:keyLabelFlags="fontDefault" />
            <!-- U+0E12: "ฒ" THAI CHARACTER THO PHUTHAO -->
            <Key keybaord:keySpec="&#x0E12;" />
            <!-- U+0E2C: "ฬ" THAI CHARACTER LO CHULA -->
            <Key keybaord:keySpec="&#x0E2C;" />
            <!-- U+0E26: "ฦ" THAI CHARACTER LU -->
            <Key keybaord:keySpec="&#x0E26;" />
        </case>
        <default>
            <!-- U+0E1C: "ผ" THAI CHARACTER PHO PHUNG -->
            <Key keybaord:keySpec="&#x0E1C;" />
            <!-- U+0E1B: "ป" THAI CHARACTER PO PLA -->
            <Key keybaord:keySpec="&#x0E1B;" />
            <!-- U+0E41: "แ" THAI CHARACTER SARA AE -->
            <Key keybaord:keySpec="&#x0E41;" />
            <!-- U+0E2D: "อ" THAI CHARACTER O ANG -->
            <Key keybaord:keySpec="&#x0E2D;" />
            <!-- U+0020: " " SPACE
                 U+0E34: " ิ" THAI CHARACTER SARA I -->
            <!-- Note: The space character is needed as a preceding letter to draw some Thai
                 composing characters correctly. -->
            <Key
                keybaord:keySpec="&#x20;&#x0E34;|&#x0E34;"
                keybaord:keyLabelFlags="followKeyLetterRatio" />
            <!-- U+0020: " " SPACE
                 U+0E37: " ื" THAI CHARACTER SARA UEE -->
            <!-- Note: The space character is needed as a preceding letter to draw some Thai
                 composing characters correctly. -->
            <Key
                keybaord:keySpec="&#x20;&#x0E37;|&#x0E37;"
                keybaord:keyLabelFlags="followKeyLetterRatio" />
            <!-- U+0E17: "ท" THAI CHARACTER THO THAHAN -->
            <Key keybaord:keySpec="&#x0E17;" />
            <!-- U+0E21: "ม" THAI CHARACTER MO MA -->
            <Key keybaord:keySpec="&#x0E21;" />
            <!-- U+0E43: "ใ" THAI CHARACTER SARA AI MAIMUAN -->
            <Key keybaord:keySpec="&#x0E43;" />
            <!-- U+0E1D: "ฝ" THAI CHARACTER FO FA -->
            <Key keybaord:keySpec="&#x0E1D;" />
        </default>
    </switch>
</merge>

<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <include
        keybaord:keyboardLayout="@xml/key_styles_common" />
    <Row
        keybaord:keyWidth="10%p"
    >
        <include
            keybaord:keyboardLayout="@xml/rowkeys_dvorak1" />
        </Row>
    <Row
        keybaord:keyWidth="10%p"
    >
        <include
            keybaord:keyboardLayout="@xml/rowkeys_dvorak2" />
    </Row>
    <Row
        keybaord:keyWidth="10%p"
    >
        <Key
            keybaord:keyStyle="shiftKeyStyle"
            keybaord:keyWidth="15%p"
            keybaord:visualInsetsRight="1%p" />
        <include
            keybaord:keyboardLayout="@xml/rowkeys_dvorak3" />
        <Key
            keybaord:keyStyle="deleteKeyStyle"
            keybaord:keyWidth="fillRight"
            keybaord:visualInsetsLeft="1%p" />
    </Row>
    <!-- Dvorak layout shares almost the same row with Qwerty layout.
         The difference is defined in xml/row_qwerty4.xml. -->
    <include
        keybaord:keyboardLayout="@xml/row_qwerty4" />
</merge>

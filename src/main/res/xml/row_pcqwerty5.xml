<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <Row
        keybaord:keyWidth="7.692%p"
    >
        <switch>
            <case
                keybaord:clobberSettingsKey="false"
            >
                <Key
                    keybaord:keyStyle="settingsKeyStyle"
                    keybaord:keyWidth="11.538%p" />
            </case>
        </switch>
        <switch>
            <case
                keybaord:languageSwitchKeyEnabled="true"
            >
                <Key
                    keybaord:keyStyle="languageSwitchKeyStyle"
                    keybaord:keyXPos="19.231%p"
                    keybaord:keyWidth="11.538%p" />
                <Key
                    keybaord:keyStyle="spaceKeyStyle"
                    keybaord:keyWidth="42.308%p" />
            </case>
            <!-- languageSwitchKeyEnabled="false" -->
            <default>
                <Key
                    keybaord:keyStyle="spaceKeyStyle"
                    keybaord:keyXPos="26.923%p"
                    keybaord:keyWidth="46.154%p" />
            </default>
        </switch>
        <Key
            keybaord:keyStyle="enterKeyStyle"
            keybaord:keyXPos="-19.231%p"
            keybaord:keyWidth="fillRight" />
    </Row>
</merge>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/border_bg_for_white"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:padding="4dp"
        android:id="@+id/gkHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imgDeleteGk"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/nonOptionalGkHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nonOptionGkText"
                    android:text="Gk Text Place Holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/optionalGkHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@android:color/black"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:id="@+id/optionGkText"
                        android:text="Gk Text Place Holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/optionGroup"
                    android:layout_marginStart="4dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/txtOption1"
                        android:gravity="center"
                        android:text="Option 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        android:id="@+id/option2"
                        android:gravity="center"
                        android:text="Option 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RadioGroup>

            </LinearLayout>

        </RelativeLayout>


        <ImageView
            android:textColor="@android:color/black"
            android:id="@+id/imgDeleteGk"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/trash" />


    </RelativeLayout>

</LinearLayout>
<KeyboardLayoutSet
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard">
    <Feature
        keybaord:supportedScript="thai" />
    <Element
        keybaord:elementName="alphabet"
        keybaord:elementKeyboard="@xml/kbd_thai"
        keybaord:enableProximityCharsCorrection="true" />
    <Element
        keybaord:elementName="alphabetAutomaticShifted"
        keybaord:elementKeyboard="@xml/kbd_thai"
        keybaord:enableProximityCharsCorrection="true" />
    <!-- On these shifted alphabet layouts the proximity characters correction should be disabled
         because the letters on these layouts aren't the ones in different case of the above
         unshifted layouts. -->
    <Element
        keybaord:elementName="alphabetManualShifted"
        keybaord:elementKeyboard="@xml/kbd_thai" />
    <Element
        keybaord:elementName="alphabetShiftLocked"
        keybaord:elementKeyboard="@xml/kbd_thai" />
    <Element
        keybaord:elementName="alphabetShiftLockShifted"
        keybaord:elementKeyboard="@xml/kbd_thai" />
    <Element
        keybaord:elementName="symbols"
        keybaord:elementKeyboard="@xml/kbd_symbols" />
    <Element
        keybaord:elementName="symbolsShifted"
        keybaord:elementKeyboard="@xml/kbd_symbols_shift" />
    <Element
        keybaord:elementName="phone"
        keybaord:elementKeyboard="@xml/kbd_phone" />
    <Element
        keybaord:elementName="phoneSymbols"
        keybaord:elementKeyboard="@xml/kbd_phone_symbols" />
    <Element
        keybaord:elementName="number"
        keybaord:elementKeyboard="@xml/kbd_number" />
</KeyboardLayoutSet>

<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <switch>
        <case
            keybaord:keyboardLayoutSet="dvorak"
        >
            <Key
                keybaord:keySpec="z"
                keybaord:keyLabelFlags="hasPopupHint"
                keybaord:moreKeys="!text/morekeys_punctuation,!text/morekeys_z" />
        </case>

        <case keybaord:keyboardLayoutSet="bengali_phonetic">
            <Key
                keybaord:keySpec="ред"
                keybaord:keyHintLabel="!text/keyhintlabel_period"
                keybaord:keyLabelFlags="hasPopupHint|hasShiftedLetterHint"
                keybaord:moreKeys="!text/morekeys_period"
                keybaord:backgroundType="functional" />
        </case>
        <default>
            <Key
                keybaord:keySpec="!text/keyspec_period"
                keybaord:keyHintLabel="!text/keyhintlabel_period"
                keybaord:keyLabelFlags="hasPopupHint|hasShiftedLetterHint"
                keybaord:moreKeys="!text/morekeys_period"
                keybaord:backgroundType="functional" />
        </default>
    </switch>
</merge>

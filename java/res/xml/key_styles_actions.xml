<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <!-- Go key -->
    <switch>
        <case keybaord:isIconDefined="go_key">
            <key-style
                keybaord:styleName="goActionKeyStyle"
                keybaord:keySpec="!icon/go_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <default>
            <key-style
                keybaord:styleName="goActionKeyStyle"
                keybaord:keySpec="!text/label_go_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
    <!-- Next key -->
    <switch>
        <case keybaord:isIconDefined="next_key">
            <key-style
                keybaord:styleName="nextActionKeyStyle"
                keybaord:keySpec="!icon/next_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <default>
            <key-style
                keybaord:styleName="nextActionKeyStyle"
                keybaord:keySpec="!text/label_next_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
    <!-- Previous key -->
    <switch>
        <case keybaord:isIconDefined="previous_key">
            <key-style
                keybaord:styleName="previousActionKeyStyle"
                keybaord:keySpec="!icon/previous_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <default>
            <key-style
                keybaord:styleName="previousActionKeyStyle"
                keybaord:keySpec="!text/label_previous_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
    <!-- Done key -->
    <switch>
        <case keybaord:isIconDefined="done_key">
            <key-style
                keybaord:styleName="doneActionKeyStyle"
                keybaord:keySpec="!icon/done_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <default>
            <key-style
                keybaord:styleName="doneActionKeyStyle"
                keybaord:keySpec="!text/label_done_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
    <!-- Send key -->
    <switch>
        <case keybaord:isIconDefined="send_key">
            <key-style
                keybaord:styleName="sendActionKeyStyle"
                keybaord:keySpec="!icon/send_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <default>
            <key-style
                keybaord:styleName="sendActionKeyStyle"
                keybaord:keySpec="!text/label_send_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
    <!-- Seartch key -->
    <switch>
        <case keybaord:isIconDefined="search_key">
            <key-style
                keybaord:styleName="searchActionKeyStyle"
                keybaord:keySpec="!icon/search_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <default>
            <key-style
                keybaord:styleName="searchActionKeyStyle"
                keybaord:keySpec="!text/label_search_key|!code/key_enter"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
    <switch>
        <case keybaord:keyboardTheme="ICS|KLP">
            <key-style
                keybaord:styleName="customLabelActionKeyStyle"
                keybaord:keySpec="dummy_label|!code/key_enter"
                keybaord:keyLabelFlags="fromCustomActionLabel"
                keybaord:backgroundType="action"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </case>
        <!-- keyboardTheme="LXXLight|LXXDark" -->
        <default>
            <key-style
                keybaord:styleName="customLabelActionKeyStyle"
                keybaord:keySpec="dummy_label|!code/key_enter"
                keybaord:keyLabelFlags="fromCustomActionLabel"
                keybaord:backgroundType="functional"
                keybaord:parentStyle="defaultEnterKeyStyle" />
        </default>
    </switch>
</merge>

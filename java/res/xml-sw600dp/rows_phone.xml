<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <include
        keybaord:keyboardLayout="@xml/key_styles_common" />
    <include
        keybaord:keyboardLayout="@xml/key_styles_number" />
    <Row>
        <Key
            keybaord:keySpec="-"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keySpec="+"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keySpec="!string/label_pause_key|,"
            keybaord:keyLabelFlags="followKeyLabelRatio|autoXScale"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keyStyle="num1KeyStyle"
            keybaord:keyXPos="31%p" />
        <Key
            keybaord:keyStyle="num2KeyStyle" />
        <Key
            keybaord:keyStyle="num3KeyStyle" />
        <Key
            keybaord:keyStyle="deleteKeyStyle"
            keybaord:keyXPos="-14%p"
            keybaord:keyWidth="fillRight" />
    </Row>
    <Row>
        <Key
            keybaord:keySpec=","
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keySpec="."
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keySpec="!string/label_wait_key|;"
            keybaord:keyLabelFlags="followKeyLabelRatio|autoXScale"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keyStyle="num4KeyStyle"
            keybaord:keyXPos="31%p" />
        <Key
            keybaord:keyStyle="num5KeyStyle" />
        <Key
            keybaord:keyStyle="num6KeyStyle" />
        <Key
            keybaord:keyStyle="enterKeyStyle"
            keybaord:keyXPos="-14%p"
            keybaord:keyWidth="fillRight" />
    </Row>
    <Row>
        <Key
            keybaord:keySpec="("
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keySpec=")"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keySpec="N"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyWidth="10%p"
            keybaord:backgroundType="functional" />
        <Key
            keybaord:keyStyle="num7KeyStyle"
            keybaord:keyXPos="31%p" />
        <Key
            keybaord:keyStyle="num8KeyStyle" />
        <Key
            keybaord:keyStyle="num9KeyStyle" />
        <!-- Note: This Spacer prevents the above key from being marked as a right edge key. -->
        <Spacer />
    </Row>
    <Row>
        <Key
            keybaord:keyStyle="tabletNumSpaceKeyStyle"
            keybaord:keyWidth="30%p" />
        <!-- U+FF0A: "ï¼Š" FULLWIDTH ASTERISK -->
        <Key
            keybaord:keySpec="&#xFF0A;|*"
            keybaord:keyStyle="numSymbolKeyStyle"
            keybaord:keyXPos="31%p" />
        <Key
            keybaord:keyStyle="num0KeyStyle"
            keybaord:keyHintLabel="+" />
        <Key
            keybaord:keySpec="\#"
            keybaord:keyStyle="numSymbolKeyStyle" />
    </Row>
</merge>

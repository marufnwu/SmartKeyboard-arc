<merge
    xmlns:keybaord="http://schemas.android.com/apk/res/com.sikderithub.keyboard"
>
    <switch>
        <case
            keybaord:keyboardLayoutSet="bengali_akkhor|farsi|kannada|nepali_romanized|nepali_traditional|telugu"
            keybaord:languageSwitchKeyEnabled="true"
        >
            <Key
                keybaord:keyStyle="languageSwitchKeyStyle" />
            <Key
                keybaord:keyStyle="spaceKeyStyle"
                keybaord:keyWidth="8.0%p" />
            <Key
                keybaord:keyStyle="zwnjKeyStyle" />
        </case>
        <case
            keybaord:keyboardLayoutSet="bengali_akkhor|farsi|kannada|nepali_romanized|nepali_traditional|telugu"
            keybaord:languageSwitchKeyEnabled="false"
        >
            <Key
                keybaord:keyStyle="spaceKeyStyle"
                keybaord:keyWidth="16.0%p" />
            <Key
                keybaord:keyStyle="zwnjKeyStyle" />
        </case>
        <case
            keybaord:languageSwitchKeyEnabled="true"
        >
            <Key
                keybaord:keyStyle="languageSwitchKeyStyle" />
            <Key
                keybaord:keyStyle="spaceKeyStyle"
                keybaord:keyWidth="16.0%p" />
        </case>
        <!-- languageSwitchKeyEnabled="false" -->
        <default>
            <Key
                keybaord:keyStyle="spaceKeyStyle"
                keybaord:keyWidth="24.0%p" />
        </default>
    </switch>
</merge>
